<style>
    .faq-list {
        position: absolute;
        top: 200px;
        width: 100%;
        padding: 0 30px;
    }

    .faq-question {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        cursor: pointer;
        user-select: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .faq-question:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .faq-icon svg {
        transition: transform 0.4s ease;
    }

    .faq-accordion.active .faq-icon svg {
        transform: rotate(45deg);
    }

    .faq-answer-wrapper {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .faq-accordion.active .faq-answer-wrapper {
        max-height: 500px; 
        transition: max-height 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .faq-answer {
        padding: 0 0 20px 0;
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.4s ease, transform 0.4s ease;
    }

    .faq-accordion.active .faq-answer {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 0.5s ease 0.2s, transform 0.5s ease 0.2s;
    }

    .card.features {
        min-height: 590px;
        position: relative;
    }

    .section-tittle.left {
        position: absolute;
        top: 40px;
        left: 30px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const questions = document.querySelectorAll('[data-question]');
        
        questions.forEach(question => {
            question.addEventListener('click', () => {
                const accordion = question.closest('.faq-accordion');
                if (!accordion) return;
                
                const wasActive = accordion.classList.contains('active');
                
                document.querySelectorAll('.faq-accordion.active').forEach(activeAccordion => {
                    if (activeAccordion !== accordion) {
                        activeAccordion.classList.remove('active');
                    }
                });
                
                if (wasActive) {
                    accordion.classList.remove('active');
                } else {
                    accordion.classList.add('active');
                }
            });
        });
    });
</script>