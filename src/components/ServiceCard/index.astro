<div role="listitem" class="item w-dyn-item">
  <a data-w-id="d6bdcc75-a34d-8d32-0b2b-9c2af3c83756" href={propertyUrl} class="card-cms properties w-inline-block">
      <div class="tumbnail-wrapper">
          <div class="content-cms _2">
              <div class="column-wrapper-cms">
                  <img width="45" height="45" alt="" src="/icons/locations.svg" loading="lazy" class="icon"/>
                  <div class="title-badge cms-card">Саратов, Энгельс</div>
              </div>
              <div class="column-wrapper-cms avabilty">
                  <!-- <div class="badge mini">
                      <div class="title-badge">2</div>
                      <div class="title-badge">Bedroom</div>
                  </div>
                  <div class="badge mini">
                      <div class="title-badge">2</div>
                      <div class="title-badge">Bathroom</div>
                  </div> -->
              </div>
          </div>
          <div class="content-cms">
              <div class="sub-heading-regular cms">{title}</div>
              {price && (
                <div class="column-wrapper-cms">
                    <div class="sub-heading-regular price">от</div>
                    <div class="sub-heading-regular price">{price}₽</div>
                </div>
              )}
          </div>
          <img src={imageUrl} loading="lazy" alt="Tumbnail" sizes="100vw" class="tumbnail properties _2"/>
          <div style="display:none;-webkit-transform:translate3d(0, 0, 0) scale3d(0.8, 0.8, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-moz-transform:translate3d(0, 0, 0) scale3d(0.8, 0.8, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);-ms-transform:translate3d(0, 0, 0) scale3d(0.8, 0.8, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0);transform:translate3d(0, 0, 0) scale3d(0.8, 0.8, 1) rotateX(0) rotateY(0) rotateZ(0) skew(0, 0) " class="icon-wrapper popup">
              <img width="45" height="45" alt="" src="/icons/right-up.png" loading="lazy" class="icon"/>
          </div>
      </div>
  </a>
</div>

<script>
  // Ждем загрузки DOM
  document.addEventListener('DOMContentLoaded', function() {
    // Находим все карточки
    const cards = document.querySelectorAll('.card-cms.properties');
    
    cards.forEach(card => {
      // Для каждой карточки находим нужные элементы внутри неё
      const thumbnail = card.querySelector('.tumbnail.properties._2');
      const iconWrapper = card.querySelector('.icon-wrapper.popup');
      
      // Проверяем, что оба элемента существуют и являются HTMLElement
      if (thumbnail instanceof HTMLElement && iconWrapper instanceof HTMLElement) {
        
        // При наведении на карточку
        card.addEventListener('mouseenter', function() {
          // Показываем иконку
          iconWrapper.style.display = 'flex';
          
          // Приближаем фото
          thumbnail.style.transform = 'scale(1.1)';
          thumbnail.style.transition = 'transform 0.9s ease';
        });
        
        // Когда убираем курсор с карточки
        card.addEventListener('mouseleave', function() {
          // Скрываем иконку
          iconWrapper.style.display = 'none';
          
          // Возвращаем фото в исходный размер
          thumbnail.style.transform = 'scale(1)';
        });
        
      }
    });
  });
</script>