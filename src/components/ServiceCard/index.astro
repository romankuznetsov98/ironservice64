---
export interface IServiceCardProps {
  title: string;
  location: string;
  bedrooms: number;
  bathrooms: number;
  price: number;
  imageUrl: string;
  propertyUrl: string;
}

const {
  title = "Urban Elegance",
  location = "Grand Harbor",
  bedrooms = 2,
  bathrooms = 2,
  price = 9000,
  imageUrl = "./assets/68c0f540a40a075623084298_Modern Coastal Retreat.png",
  propertyUrl = "https://fazora.webflow.io/properties/urban-elegance",
} = Astro.props as IServiceCardProps;
---

<div role="listitem" class="item w-dyn-item">
  <a href={propertyUrl} class="card-cms properties w-inline-block">
    <div class="tumbnail-wrapper">
      <div class="content-cms _2">
        <div class="column-wrapper-cms">
          <img
            width="45"
            height="45"
            alt=""
            src="./assets/68c0f238ec1660243de7e8f4_mingcute--location-line.svg"
            loading="lazy"
            class="icon"
          />
          <div class="title-badge cms-card">{location}</div>
        </div>
        <div class="column-wrapper-cms avabilty">
          <div class="badge mini">
            <div class="title-badge">{bedrooms}</div>
            <div class="title-badge">Bedroom</div>
          </div>
          <div class="badge mini">
            <div class="title-badge">{bathrooms}</div>
            <div class="title-badge">Bathroom</div>
          </div>
        </div>
      </div>
      <div class="content-cms">
        <div class="sub-heading-regular cms">{title}</div>
        <div class="column-wrapper-cms">
          <div class="sub-heading-regular price">$</div>
          <div class="sub-heading-regular price">{price}</div>
        </div>
      </div><img
        style="transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
        src={imageUrl}
        alt="Tumbnail"
        loading="lazy"
        sizes="100vw"
        srcset="https://cdn.prod.website-files.com/68c0e3e4af3be748783bb100/68c0f540a40a075623084298_Modern%20Coastal%20Retreat-p-500.png 500w, https://cdn.prod.website-files.com/68c0e3e4af3be748783bb100/68c0f540a40a075623084298_Modern%20Coastal%20Retreat-p-800.png 800w, https://cdn.prod.website-files.com/68c0e3e4af3be748783bb100/68c0f540a40a075623084298_Modern%20Coastal%20Retreat.png 992w"
        class="tumbnail properties"
      />
      <div
        style="display: none; transform: translate3d(0px, 0px, 0px) scale3d(0.8, 0.8, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
        class="icon-wrapper popup"
      >
        <img
          width="45"
          height="45"
          alt=""
          src="./assets/68c0e3e4af3be748783bb49b_mynaui--arrow-up-right (2).svg"
          loading="lazy"
          class="icon"
        />
      </div>
    </div>
  </a>
</div>
